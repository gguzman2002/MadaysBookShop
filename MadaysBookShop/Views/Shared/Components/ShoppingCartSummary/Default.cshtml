@model ShoppingCartViewModel

@if(Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <a class="layout-navcart" asp-controller="ShoppingCart" asp-action="Index">Cart ~ @Model.ShoppingCart.ShoppingCartItems.Count</a>
}
else
{
    <a class="layout-navcart" asp-controller="ShoppingCart" asp-action="Index">Cart</a>
}