@model HomeViewModel

@{
    Layout = "_Layout";
}

<section class="list-booksection">

    @foreach (var book in Model.Books)
    {
        <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId">
            <article class="list-bookarticle">
                <img class="list-bookimage" src=@book.ImageThumbnailUrl>
                <h2 class="list-bookname">@book.Name</h2>
                <h2 class="list-bookcategory">@book.Category.CategoryName</h2>
                <h2 class="list-bookprice">@book.Price.ToString("c")</h2>
            </article>
        </a>
    }

</section>